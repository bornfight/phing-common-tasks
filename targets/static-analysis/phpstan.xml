<?xml version="1.0" encoding="UTF-8"?>


<project name="phpstan" default="phpstan.execute">

    <target name="phpstan:before" hidden="true">
        <echo message="No actions defined" level="debug"/>
    </target>

    <target name="phpstan:main" hidden="true">
        <available file="${project.root}/phpstan.neon" type="file" property="phpstan.neon.exists"/>
        <fail unless="phpstan.neon.exists" message="phpstan.neon not found!"/>
        <phpstan command="analyse" level="7" paths="src/" />
    </target>

    <target name="phpstan:after" hidden="true">
        <echo message="No actions defined" level="debug"/>
    </target>

    <target name="phpstan.execute" depends="phpstan:before, phpstan:main, phpstan:after">
        <echo message="Succeessful!"/>
    </target>

</project>
